{
  "name": "console-test-helpers",
  "version": "0.0.1",
  "description": "Test helpers for building console UIs",
  "main": "index.js",
  "repository": "http://github.com/scalvert/console-test-helpers",
  "author": "scalvert",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "clean": "rm -rf lib/*",
    "lint": "eslint --ext js,ts .",
    "test": "yarn build && qunit lib/tests && yarn clean",
    "test:dev": "yarn build && qunit lib/tests",
    "test:debug": "yarn build && node --inspect-brk=1337 node_modules/.bin/qunit lib/tests",
    "prepublishOnly": "yarn build",
    "postpublish": "yarn clean"
  },
  "devDependencies": {
    "@types/qunit": "^2.9.0",
    "qunit": "^2.9.3",
    "typescript": "^3.7.3"
  }
}
